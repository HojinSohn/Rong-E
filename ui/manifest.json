{
  "manifest_version": 3,
  "name": "Echo Overlay",
  "version": "1.0",
  "description": "Lightweight overlay UI for Echo Agent",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle Echo"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ]
}